{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node","webpack-env"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "outDir":"./"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/shims.d.ts", "src/utils/public.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
